<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet id="20211219-02" author="zakrzhevskiy-as">
        <preConditions>
            <tableExists tableName="orders" schemaName="vending_machine"/>
        </preConditions>
        <addColumn tableName="orders" schemaName="vending_machine">
            <column name="active" type="boolean" defaultValueBoolean="true"/>
        </addColumn>
        <sql>
            CREATE UNIQUE INDEX uk_user_id_active_order ON vending_machine.orders (user_id)
            WHERE active;
        </sql>
    </changeSet>
</databaseChangeLog>